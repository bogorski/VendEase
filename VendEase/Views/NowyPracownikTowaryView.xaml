<local:JedenViewBase x:Class="VendEase.Views.NowyPracownikTowaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VendEase.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Style="{StaticResource NewElementStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0"  Content="Pracownik"/>
        <ComboBox Grid.Column="1" Grid.Row="0"  
          ItemsSource="{Binding PracownicyItems}"
          DisplayMemberPath="Value"
          SelectedValuePath="Key"
          SelectedValue="{Binding Path=IDPracownika, Mode=TwoWay}"
          />
        <Label Grid.Column="0" Grid.Row="1"  Content="Towar"/>
        <ComboBox Grid.Column="1" Grid.Row="1"  
          ItemsSource="{Binding TowaryItems}"
          DisplayMemberPath="Value"
          SelectedValuePath="Key"
          SelectedValue="{Binding Path=IDTowaru, Mode=TwoWay}"
          />
        <Label Grid.Column="0" Grid.Row="2"  Content="Stan"/>
        <TextBox Grid.Column="1" Grid.Row="2"  Text="{Binding Path=Stan, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <Label Grid.Column="0" Grid.Row="3"  Content="Opis"/>
        <TextBox Grid.Column="1" Grid.Row="3"  Text="{Binding Path=Opis, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="4"  Content="Data"/>
        <DatePicker Grid.Column="1" Grid.Row="4"  SelectedDate="{Binding Path=Data, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</local:JedenViewBase>
